

<div class="text-center user-blogpost">
<h2> Title: {{title}} </h2>
  <p>{{content}}</p>
  <p>Created by {{user.userName}} on {{format_date date_created}}</p>
<div class="comment">
                {{#each comments}}
                {{> comment }}
                {{/each}}
            </div>
   <p>
    <button id="update-post-btn" class="btn btn-primary"> Update Post </button>
    <button id="delete-post-btn" data-id="{{id}}" class="btn btn-danger"> Delete Post </button>
  </p>
</div>

<script src="../js/userblogs.js"></script>
